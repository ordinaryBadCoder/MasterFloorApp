<Window x:Class="MasterFloorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloorApp"
        mc:Ignorable="d"
        Title="Мастер пол: Список партнёров" 
        Height="550" Width="800"
        MinHeight="550" MinWidth="800"
        Icon="/Resources/MasterFloorIco.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        
        <!--Шапка с логотипом и названием окна-->
        <Border Grid.Row="0"
                Background="#F4E8D3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!--Логотип-->
                <Image Grid.Column="0"
                       Source="/Resources/MasterFloorLogo.png"
                       Height="70"
                       Width="70"
                       Margin="5"/>
                
                <!--Заголовок-->
                <TextBlock Text="Партнёры"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Column="1"
                           FontSize="40"
                           FontFamily="Segoe UI"/>                          
            </Grid>
        </Border>
        
        <!--Список партнеров-->
        <ListBox x:Name="listPartners"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Grid.Row="1"
                 Margin="15"
                 d:ItemsSource="{d:SampleData ItemCount=3}"
                 MouseDoubleClick="listPartners_MouseDoubleClick">   
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10,6,10,0"
                            Background="Transparent"
                            BorderThickness="0.5"
                            BorderBrush="Black"
                            Width="600">
                        <Grid Margin="20,10,20,10">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="0.11*"/>
                            </Grid.ColumnDefinitions>

                            <!--Строка с типом и наименованием партнера-->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0"
                                        Grid.Column="0">
                                <TextBlock Text="{Binding typePartner}"
                                           FontSize="16"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text=" | "
                                           FontSize="16"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="{Binding namePartner}"
                                           FontSize="16"
                                           FontFamily="Segoe UI"/>
                            </StackPanel>

                            <!--Строка с ФИО директора-->
                            <TextBlock Text="{Binding directorName}"
                                       FontSize="12"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       FontFamily="Segoe UI"/>

                            <!--Строка с номером телефона-->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="2"
                                        Grid.Column="0">
                                <TextBlock Text="+7 "
                                           FontSize="12"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="{Binding phone}"
                                           FontSize="12"
                                           FontFamily="Segoe UI"/>
                            </StackPanel>
                            
                            <!--Строка с рейтингом-->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="3"
                                        Grid.Column="0">
                                <TextBlock Text="Рейтинг: "
                                           FontSize="12"                                                   
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="{Binding rate}"
                                           FontSize="12"                                                   
                                           FontFamily="Segoe UI"/>
                            </StackPanel>

                            <!--Строка с расчетом скидки-->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0"
                                        Grid.Column="1">
                                <TextBlock Text="{Binding discount}"
                                           FontSize="16"                                                   
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="%"
                                           FontSize="16"                                                   
                                           FontFamily="Segoe UI"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!--Панель для кнопок-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Background="#F4E8D3">  
            
            <!--Кнопка для добавления нового партнера-->
            <Button x:Name="AddNewPartner"
                    Background="#67BA80"
                    BorderThickness="0"
                    Width="300"
                    Height="50"
                    Margin="10"
                    Click="AddNewPartner_Click">
                <TextBlock Text="Добавить нового партнера"
                           FontFamily="Segoe UI"
                           FontSize="20"
                           TextWrapping="Wrap"
                           Foreground="White"/>                
            </Button>
            
            <!--Кнопка для просмотра истории реализации-->
            <Button x:Name="CheckHistory"
                    Background="#67BA80"
                    BorderThickness="0"
                    Width="350"
                    Height="50"
                    Margin="10"
                    Click="CheckHistory_Click">
                <TextBlock Text="Посмотреть историю реализации"
                           FontFamily="Segoe UI"
                           FontSize="20"
                           TextWrapping="Wrap"
                           Foreground="White"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
