<Window x:Class="MasterFloorApp.ChangeListPartners"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloorApp"
        mc:Ignorable="d"
        Title="Мастер пол: Добавление\редактирование партнёров" 
        Height="620" Width="800"
        MinHeight="620" MinWidth="800"
        Icon="/Resources/MasterFloorIco.ico">
    
    <!--Основная сетка окна-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Шапка с логотипом и названием окна-->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#F4E8D3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Логотип-->
                <Image Grid.Column="0"
                       Source="/Resources/MasterFloorLogo.png"
                       Height="60"
                       Width="60"
                       Margin="0"/>

                <!--Заголовок-->
                <TextBlock Text="Добавление (редактирование) партнёров"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Grid.Column="1"
                           FontSize="30"
                           FontFamily="Segoe UI"/>
            </Grid>
        </Border>

        <!--Поле для ввода наименования организации-->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Наименование организации: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">            
        </TextBlock>
        <TextBox x:Name="NamePartnerBox"
                 Grid.Row="1"
                 Grid.Column="1"
                 Width="350"
                 Height="30"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontFamily="Segoe UI"
                 FontSize="20"/>

        <!--Поле для выбора типа организации-->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Тип организации: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
        </TextBlock>
        <ComboBox x:Name="TypePartnerBox"
                  Grid.Row="2"
                  Grid.Column="1"
                  Width="350"
                  Height="30"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  FontFamily="Segoe UI"
                  FontSize="20"/>

        <!--Поле для ввода рейтинга организации-->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Рейтинг: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
        </TextBlock>
        <TextBox x:Name="RateBox"
                 Grid.Row="3"
                 Grid.Column="1"
                 Width="350"
                 Height="30"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontFamily="Segoe UI"
                 FontSize="20"
                 PreviewTextInput="RateBox_PreviewTextInput"/>


        <!--Поле для ввода адреса организации-->
        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Адрес: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
        </TextBlock>
        <TextBox x:Name="AddressBox"
                 Grid.Row="4"
                 Grid.Column="1"
                 Width="350"
                 Height="30"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontFamily="Segoe UI"
                 FontSize="20"/>

        <!--Поле для ввода ФИО дректора организации-->
        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="ФИО директора: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
        </TextBlock>
        <TextBox x:Name="DirectorNameBox"
                 Grid.Row="5"
                 Grid.Column="1"
                 Width="350"
                 Height="30"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontFamily="Segoe UI"
                 FontSize="20"/>

        <!--Поле для ввода телефона организации-->
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="Телефон: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
        </TextBlock>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="6"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="+7 "
                       FontSize="20"
                       FontFamily="Segoe UI"
                       VerticalAlignment="Center"/> 
            <TextBox x:Name="PhoneBox"                    
                     Width="320"
                     Height="30"
                     FontFamily="Segoe UI"
                     FontSize="20"/>
        </StackPanel>

        <!--Поле для ввода почты организации-->
        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   Text="Почта: "
                   FontFamily="Segoe UI"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right">
        </TextBlock>
        <TextBox x:Name="EmailBox"
                 Grid.Row="7"
                 Grid.Column="1"
                 Width="350"
                 Height="30"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontFamily="Segoe UI"
                 FontSize="20"/>

        <!--Панель для кнопок-->
        <Border Grid.Row="8"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="#F4E8D3">           
        </Border>

        <!--Кнопка Назад-->
        <Button x:Name="CloseWindow"
                Grid.Row="8"
                Grid.Column="0"
                Background="#67BA80"
                BorderThickness="0"
                Width="300"
                Height="50"
                Content="Назад"
                FontFamily="Segoe UI"
                FontSize="20"
                Foreground="White"
                Click="CloseWindow_Click"/>

        <!--Кнопка сохранения изменений-->
        <Button x:Name="SaveChanged"
                Grid.Row="8"
                Grid.Column="1"
                Background="#67BA80"
                BorderThickness="0"
                Width="300"
                Height="50"
                Content="Сохранить"
                FontFamily="Segoe UI"
                FontSize="20"
                Foreground="White"
                Click="SaveChanged_Click"/>
    </Grid>
    
</Window>
