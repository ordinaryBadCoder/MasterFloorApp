<Window x:Class="MasterFloorApp.SalesHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloorApp"
        mc:Ignorable="d"
        Title="Мастер пол: История реализации продукции" 
        Height="550" Width="800"
        MinHeight="550" MinWidth="800"
        Icon="/Resources/MasterFloorIco.ico">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        
        <!--Шапка с логотипом и названием окна-->
        <Border Grid.Row="0"
          Background="#F4E8D3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Логотип-->
                <Image Grid.Column="0"
                 Source="/Resources/MasterFloorLogo.png"
                 Height="70"
                 Width="70"
                 Margin="5"/>

                <!--Заголовок-->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Grid.Column="1"
                            Orientation="Horizontal">
                    <TextBlock Text="История реализации: "                     
                               FontSize="30"
                               FontFamily="Segoe UI"/>
                    <TextBlock x:Name="namePartnerBox"
                               Text="{Binding namePartner}"                     
                               FontSize="30"
                               FontFamily="Segoe UI"/>
                </StackPanel>
            </Grid>
        </Border>

        <!--История реализации-->
        <ListBox x:Name="listHistory"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch"
                 VerticalAlignment="Center"
                 Grid.Row="1"
                 Margin="15"
                 d:ItemsSource="{d:SampleData ItemCount=10}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="Transparent"
                            BorderThickness="0.5"
                            BorderBrush="Black">   
                        <Grid Margin="10,10,10,10">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <!--Строка с наименованием продукции-->
                            <TextBlock Text="{Binding nameProduct}"
                                       FontSize="16"
                                       Grid.Row="0"
                                       Grid.Column="0"/>

                            <!--Строка с количеством-->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1"
                                        Grid.Column="0">
                                <TextBlock Text="Количество: "
                                           FontSize="12"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="{Binding quantity}"
                                           FontSize="12"
                                           FontFamily="Segoe UI"/>                             
                            </StackPanel>

                            <!--Строка с датой продажи-->
                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="0"
                                        Grid.Column="1">
                                <TextBlock Text="Дата продажи: "
                                           FontSize="12"
                                           FontFamily="Segoe UI"/>
                                <TextBlock Text="{Binding dateSale}"
                                           FontSize="12"
                                           FontFamily="Segoe UI"/>
                            </StackPanel>                       
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--Панель для кнопок-->
        <Border Grid.Row="2"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="#F4E8D3">
        </Border>
        
        <!--Кнопка Назад-->
        <Button x:Name="CloseWindow"
                Grid.Row="2"
                Background="#67BA80"
                BorderThickness="0"
                Width="300"
                Height="50"
                Content="Назад"
                FontFamily="Segoe UI"
                FontSize="20"
                Foreground="White"
                Click="CloseWindow_Click"/>
    </Grid>
</Window>
